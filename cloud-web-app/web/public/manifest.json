{
  "name": "Aethel Engine",
  "short_name": "Aethel",
  "description": "Next-generation AI-powered game development IDE for the web",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0a0a0f",
  "theme_color": "#6366f1",
  "orientation": "any",
  "scope": "/",
  "lang": "pt-BR",
  "categories": ["games", "developer tools", "productivity"],
  "icons": [
    {
      "src": "/aethel-logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/editor.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Aethel Engine IDE with 3D viewport"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile project browser"
    }
  ],
  "shortcuts": [
    {
      "name": "Novo Projeto",
      "short_name": "Novo",
      "description": "Criar um novo projeto de jogo",
      "url": "/projects/new",
      "icons": [{ "src": "/icons/new-project.png", "sizes": "96x96" }]
    },
    {
      "name": "Meus Projetos",
      "short_name": "Projetos",
      "description": "Ver todos os projetos",
      "url": "/projects",
      "icons": [{ "src": "/icons/projects.png", "sizes": "96x96" }]
    },
    {
      "name": "Templates",
      "short_name": "Templates",
      "description": "Explorar templates de jogos",
      "url": "/marketplace/templates",
      "icons": [{ "src": "/icons/templates.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "file_handlers": [
    {
      "action": "/editor",
      "accept": {
        "application/json": [".aethel", ".scene", ".prefab"],
        "text/javascript": [".js", ".ts"],
        "text/plain": [".glsl", ".vert", ".frag"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "model/gltf-binary", "model/gltf+json"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+aethel",
      "url": "/protocol?uri=%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
