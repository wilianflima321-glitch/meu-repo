# ============================================
# Aethel Engine - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ============================================

# ----------------------------------------
# Application
# ----------------------------------------
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# ----------------------------------------
# Runtime Server (WebSocket, Terminal, LSP, DAP)
# ----------------------------------------
RUNTIME_PORT=3001
WS_URL=ws://localhost:3001
RUNTIME_URL=ws://localhost:3001

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DATABASE_URL=postgresql://aethel:aethel_dev_password@localhost:5432/aethel_engine
DB_HOST=localhost
DB_PORT=5432
DB_USER=aethel
DB_PASSWORD=aethel_dev_password
DB_NAME=aethel_engine

# ----------------------------------------
# Redis Cache
# ----------------------------------------
REDIS_URL=redis://:aethel_redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=aethel_redis_password

# ----------------------------------------
# Authentication (NextAuth.js)
# ----------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# ----------------------------------------
# AI Services
# ----------------------------------------
# OpenAI (for Copilot-like features)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (Gemini)
GOOGLE_AI_KEY=

# Local AI (Ollama)
OLLAMA_URL=http://localhost:11434

# Default AI provider: openai | anthropic | ollama
DEFAULT_AI_PROVIDER=openai

# ----------------------------------------
# Storage (S3-compatible)
# ----------------------------------------
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=aethel
S3_SECRET_KEY=aethel_minio_password
S3_BUCKET=aethel-assets
S3_REGION=us-east-1

# MinIO Console
MINIO_ROOT_USER=aethel
MINIO_ROOT_PASSWORD=aethel_minio_password

# ----------------------------------------
# Email (SMTP)
# ----------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@aethel.engine

# ----------------------------------------
# Stripe (Billing)
# ----------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ----------------------------------------
# Analytics & Monitoring
# ----------------------------------------
# Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# PostHog
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# ----------------------------------------
# Feature Flags
# ----------------------------------------
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_TERMINAL=true
ENABLE_DEBUG=true
ENABLE_MARKETPLACE=false
ENABLE_BILLING=false

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ----------------------------------------
# Session Configuration
# ----------------------------------------
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=43200

# ----------------------------------------
# Security
# ----------------------------------------
CORS_ORIGIN=http://localhost:3000
TRUSTED_HOSTS=localhost

# ----------------------------------------
# Logging
# ----------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# ----------------------------------------
# Development Only
# ----------------------------------------
# Skip certain checks in development
SKIP_ENV_VALIDATION=false
TURBOPACK=false
