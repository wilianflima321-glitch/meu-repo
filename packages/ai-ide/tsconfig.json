    },
    {
      "path": "../ai-mcp"
    },
    {
      "path": "../core"
    },
    {
      "path": "../debug"
    },
    {
      "path": "../filesystem"
    },
    {
      "path": "../markers"
    },
    {
      "path": "../monaco"
    },
    {
      "path": "../navigator"
    },
    {
      "path": "../search-in-workspace"
    },
    {
      "path": "../task"
    },
    {
      "path": "../terminal"
