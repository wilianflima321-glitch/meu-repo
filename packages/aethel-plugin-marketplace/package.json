{
  "name": "@aethel/aethel-plugin-marketplace",
  "version": "1.0.0",
  "description": "Aethel Plugin Marketplace for user-submitted extensions, tasks, and custom integrations",
  "keywords": [
    "theia-extension",
    "aethel",
    "plugin-marketplace",
    "user-plugins",
    "extensions",
    "marketplace"
  ],
  "license": "Proprietary Aethel License",
  "repository": {
    "type": "git",
    "url": "https://github.com/aethel/aethel-theia-fork.git"
  },
  "bugs": {
    "url": "https://github.com/aethel/aethel-theia-fork/issues"
  },
  "homepage": "https://aethel-ide.com",
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@theia/core": "^1.43.0",
    "@theia/vsx-registry": "^1.43.0",
    "@theia/filesystem": "^1.43.0",
    "@theia/plugin-ext": "^1.43.0",
    "axios": "^1.6.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@theia/cli": "^1.43.0",
    "typescript": "^5.0.0",
    "rimraf": "^3.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/aethel-plugin-marketplace-frontend-module",
      "backend": "lib/node/aethel-plugin-marketplace-backend-module"
    }
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "webpack --config ./webpack.config.js",
    "watch": "webpack --config ./webpack.config.js --watch",
    "test": "mocha --config ../../configs/mocha-config.json",
    "lint": "eslint --config ../../configs/.eslintrc.json --ext .ts,.tsx src"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.15.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "aethel.plugin-marketplace.open",
        "title": "Open Plugin Marketplace",
        "category": "Aethel Plugins"
      },
      {
        "command": "aethel.plugin-marketplace.uploadPlugin",
        "title": "Upload Custom Plugin",
        "category": "Aethel Plugins"
      },
      {
        "command": "aethel.plugin-marketplace.installPlugin",
        "title": "Install Plugin from Marketplace",
        "category": "Aethel Plugins"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "aethel.plugin-marketplace.open"
        },
        {
          "command": "aethel.plugin-marketplace.uploadPlugin"
        },
        {
          "command": "aethel.plugin-marketplace.installPlugin"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "aethel-plugin-marketplace",
          "name": "Plugin Marketplace",
          "icon": "$(package)"
        }
      ]
    },
    "configuration": {
      "title": "Aethel Plugin Marketplace",
      "properties": {
        "aethel.pluginMarketplace.registryUrl": {
          "type": "string",
          "default": "https://marketplace.aethel-ide.com",
          "description": "URL of the Aethel plugin registry"
        },
        "aethel.pluginMarketplace.allowUserUploads": {
          "type": "boolean",
          "default": true,
          "description": "Allow users to upload custom plugins"
        },
        "aethel.pluginMarketplace.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update installed plugins"
        }
      }
    }
  }
}