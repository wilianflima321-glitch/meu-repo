{
  "name": "@aethel/aethel-ai-runtime",
  "version": "1.0.0",
  "private": true,
  "description": "Aethel AI Runtime extension for Theia (shim and frontend/backend bindings)",
  "keywords": ["theia-extension","aethel","ai-runtime"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aethel/aethel-theia-fork.git"
  },
  "bugs": {
    "url": "https://github.com/aethel/aethel-theia-fork/issues"
  },
  "homepage": "https://aethel-ide.com",
  "files": ["lib","src"],
  "dependencies": {
    "@theia/core": "^1.43.0",
    "@theia/filesystem": "^1.43.0",
    "@theia/workspace": "^1.43.0",
    "ollama": "^0.3.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@theia/cli": "^1.43.0",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.4",
    "typescript": "^5.0.0",
    "rimraf": "^3.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/aethel-ai-runtime-frontend-module",
      "backend": "lib/node/aethel-ai-runtime-backend-module"
    }
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "webpack --config ./webpack.config.js",
    "watch": "webpack --config ./webpack.config.js --watch",
    "test": "mocha --config ../../configs/mocha-config.json",
    "lint": "eslint --config ../../configs/.eslintrc.json --ext .ts,.tsx src"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.15.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "aethel.ai-runtime.loadModel",
        "title": "Load AI Model",
        "category": "Aethel AI"
      },
      {
        "command": "aethel.ai-runtime.runInference",
        "title": "Run Inference",
        "category": "Aethel AI"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "aethel.ai-runtime.loadModel"
        },
        {
          "command": "aethel.ai-runtime.runInference"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "aethel-ai-runtime",
          "name": "AI Models",
          "icon": "$(robot)"
        }
      ]
    },
    "configuration": {
      "title": "Aethel AI Runtime",
      "properties": {
        "aethel.aiRuntime.gpuEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable GPU acceleration for AI models"
        },
        "aethel.aiRuntime.modelPath": {
          "type": "string",
          "default": "",
          "description": "Path to local AI models directory"
        }
      }
    }
  }
}
