{
    "comments": {
        "lineComment": "#",
        "blockComment": [
            """,
            """
        ]
    },
    "brackets": [
        ["{ "", "}" ],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        {"open": "{ ", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "'", "close": "'", "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string"]}
    ],
    "surroundingPairs": [
        ["{ ", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "onEnterRules": [
        {
            "beforeText": {
                "pattern": "^\\s*(?:def|class|for|if|elif|else|while|try|with|finally|except|async).*?(:|)$"
            },
            "action": {
                "indent": "indent"
            }
        }
    ]
}