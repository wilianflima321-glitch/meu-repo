{
    "name": "@aethel/game-runtime-linux",
    "version": "1.0.0",
    "description": "Aethel Game Runtime for Linux",
    "main": "main.js",
    "private": true,
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --linux",
        "build:deb": "electron-builder --linux deb",
        "build:rpm": "electron-builder --linux rpm",
        "build:appimage": "electron-builder --linux AppImage",
        "build:snap": "electron-builder --linux snap",
        "build:flatpak": "electron-builder --linux flatpak",
        "build:arm64": "electron-builder --linux --arm64",
        "build:armv7l": "electron-builder --linux --armv7l"
    },
    "dependencies": {
        "three": "^0.160.0",
        "@dimforge/rapier3d-compat": "^0.11.2",
        "electron-store": "^8.1.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "io.aethel.game.${productName}",
        "productName": "${GAME_NAME}",
        "copyright": "Copyright Â© ${YEAR} ${DEVELOPER_NAME}",
        "asar": true,
        "asarUnpack": [
            "assets/**/*",
            "draco/**/*"
        ],
        "compression": "maximum",
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "assets/**/*",
            "draco/**/*",
            "game.json",
            "package.json"
        ],
        "linux": {
            "icon": "build/icons",
            "category": "Game",
            "synopsis": "${GAME_DESCRIPTION}",
            "description": "${GAME_DESCRIPTION}",
            "desktop": {
                "Name": "${GAME_NAME}",
                "Comment": "${GAME_DESCRIPTION}",
                "Type": "Application",
                "Categories": "Game;",
                "Keywords": "game;aethel;",
                "StartupWMClass": "${GAME_NAME}"
            },
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64", "arm64"]
                },
                {
                    "target": "deb",
                    "arch": ["x64"]
                },
                {
                    "target": "rpm",
                    "arch": ["x64"]
                },
                {
                    "target": "tar.gz",
                    "arch": ["x64", "arm64"]
                }
            ],
            "maintainer": "${DEVELOPER_EMAIL}",
            "vendor": "${DEVELOPER_NAME}",
            "executableName": "${GAME_SLUG}"
        },
        "deb": {
            "depends": [
                "gconf2",
                "gconf-service",
                "libnotify4",
                "libappindicator1",
                "libxtst6",
                "libnss3",
                "libxss1",
                "libasound2"
            ],
            "priority": "optional",
            "compression": "xz"
        },
        "rpm": {
            "depends": [
                "libXScrnSaver",
                "libXtst",
                "libappindicator",
                "alsa-lib"
            ],
            "compression": "xz"
        },
        "appImage": {
            "artifactName": "${productName}-${version}-${arch}.AppImage",
            "desktop": {
                "MimeType": "x-scheme-handler/aethel"
            }
        },
        "snap": {
            "grade": "stable",
            "confinement": "strict",
            "plugs": [
                "default",
                "audio-playback",
                "desktop",
                "desktop-legacy",
                "home",
                "network",
                "opengl",
                "unity7",
                "wayland",
                "x11"
            ]
        },
        "publish": null,
        "directories": {
            "output": "dist",
            "buildResources": "build"
        }
    }
}
